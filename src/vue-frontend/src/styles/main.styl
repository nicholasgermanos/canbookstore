// Colour scheme 2
$theme-dark = #222831
$theme-grey-ish = #393E46
$theme-brown = #948979
$theme-cream = #DFD0B8
$theme-white = #FAF9F6

$grid-breakpoint-xs = 0
$grid-breakpoint-sm = 576px
$grid-breakpoint-md = 768px
$grid-breakpoint-lg = 992px
$grid-breakpoint-xl = 1200px
$grid-breakpoint-xxl = 1400px

// Phone specific css can go under this
@media (min-width: $grid-breakpoint-sm)
  .newlines
    padding-top: 20px;
    padding-bottom: 20px;

.nick-button
  // Button style
  background: $theme-cream
  border: $theme-brown
  border-radius: 4px;
  width: 100%;
  height: 35px;
  cursor: pointer;
  align-self: center;
  margin-bottom: 10px;
  box-shadow: 0 0 1px 1px;

  // Button text style
  color: $theme-dark;
  font-weight: bold;

.nick-button:hover
  background: $theme-brown;
  
// Forms
.blog-form
  width: fit-content;
  background: $theme-white;
  position: relative;
  display: inline-flex;
  box-shadow: 2px 2px 10px 0 rgba(33, 33, 33, 0.2);
  
  input, textarea
    width: 90%;
    margin-top: 30px;
    border: 0;
    border-bottom: 1px solid $theme-grey-ish;
    font-size: 13px;
    font-weight: 300;
    color: $theme-grey-ish;
    letter-spacing: 0.11em;
    background: $theme-white;
    
    &::placeholder
      color: $theme-grey-ish;
      font-size: 14px;
    
    &:focus
      outline: 0;
      border-bottom: 2px solid;